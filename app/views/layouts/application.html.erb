<!DOCTYPE html>
<html>
  <head>
    <title>Dream on!</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('favicon.ico') %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="bg-blue-800 text-gray-200 py-4">
    <div class="container mx-auto">
      <header class="relative pb-4">
        <h1 class="mb-4 text-3xl italic"><%= link_to 'Dream on!', root_path, class: "text-red-400" %></h1>
        <div class="text-xs absolute top-0 right-0">
        <% if user_signed_in? %>
          <%= current_user.username %>
          <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to 'Log in', new_user_session_path %>
          <%= link_to "Sign up", new_user_registration_path %>
        <% end %>
        </div>
        <% if user_signed_in? %>
        <nav>
          <ul class="flex mb-4 text-xs">
              <li class="mr-3"><%= active_link_to 'Create a new dream', new_post_path,  :class => "btn" %>
              <li class="mr-3"><%= active_link_to 'Show all dreams', alldreams_posts_path, :class => "btn" %>
              <li class="mr-3"><%= active_link_to 'Show my dreams only', mydreams_posts_path, :class => "btn" %>
          </ul>
        </nav>
        <% end %>
      </header>
      <div class="flex">
        <main class="flex w-2/3">
          <%= yield %>
        </main>
        <aside class="w-1/3 pl-8 text-right text-xs">
          <ul>
            <li class="mb-1">Total Dreams: <%= get_number_of_dreams %></li>
            <li class="mb-1">Total Dreamers: <%= get_number_of_dreamers %></li>
            <li>Private Dreams: <%= get_number_of_private_dreams %></li>
          </ul>
        </aside>
      </div>
      <footer>
        <footer class="text-center text-xs my-8">
          <%= show_footer %>
      </footer>
      </footer>
    </div>
  </body>
</html>
