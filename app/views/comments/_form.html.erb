<%= simple_form_for([@post, @post.comments.build]) do |f| %>
<%= f.input :name, label: false, input_html: { value: current_user.username, class: "hidden" } %>
<%= f.input :comment, label: false, placeholder: "Your comment here.", input_html: { class: "h-24" } %>
<%= f.button :submit, class: "mt-4" %>
<% end %>
