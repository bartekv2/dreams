<div class="flex justify-center my-10 w-full shadow-md rounded px-8 pt-6 pb-8 mb-4 max-w-sm">
  <div>
    <h2 class="mb-4">Sign up</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs w-full">
        <%= f.input :username,
                    required: true,
                    autofocus: true,
                    placeholder: "Username",
                    label: false,
                    input_html: { autocomplete: "username" } %>
        <%= f.input :email,
                    required: true,
                    placeholder: "Email",
                    label: false,
                    input_html: { autocomplete: "email", class: "mt-4" }%>
        <%= f.input :password,
                    required: true,
                    placeholder: "Password",
                    label: false,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: "mt-4" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    placeholder: "Password confirmation",
                    label: false,
                    input_html: { autocomplete: "new-password", class: "mt-4" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "my-4" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
