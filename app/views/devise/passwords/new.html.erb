<% content_for :title, "Forgotten password - DreamDiary.online" %>
<div class="flex justify-center my-10 w-full shadow-md rounded px-8 pt-6 pb-8 mb-4 max-w-sm">
  <div>
    <h2 class="mb-4">Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    placeholder: "Email",
                    label: false,
                    input_html: { autocomplete: "email" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send me reset password instructions", class: " my-4" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
