<%= simple_form_for @post do |f| %>
<%= f.input :title, label: false, placeholder: "Dream name" %>
<%= f.input :content, label: false, placeholder: "Describe your dream here.", input_html: { class: "mt-4 h-64" } %>

<div class="flex flex-wrap mb-6">
  <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name do |t| %>
  <label class="flex justify-start items-start mt-2 inline-block w-40 text-sm">
    <div class="inline-block bg-white border rounded border-gray-600 w-6 h-6 flex flex-shrink-0 justify-center items-center mr-2 focus-within:border-blue-500">
      <%= t.check_box class: "hidden" %>
      <svg class="fill-current hidden w-4 h-4 text-teal-600 pointer-events-none" viewBox="0 0 20 20"><path d="M0 11l2-2 5 5L18 3l2 2L7 18z"/></svg>
    </div>
    <div class="select-none"><%= t.label %></div>
    </label>
  <% end %>
</div>


<label class="flex justify-start items-start mt-4">
  <div class="bg-white border rounded border-gray-600 w-6 h-6 flex flex-shrink-0 justify-center items-center mr-2 focus-within:border-blue-500">
    <%= f.check_box :private, as: :boolean, label: false, wrapper: false, class: "hidden" %>
    <svg class="fill-current hidden w-4 h-4 text-teal-600 pointer-events-none" viewBox="0 0 20 20"><path d="M0 11l2-2 5 5L18 3l2 2L7 18z"/></svg>
  </div>
  <div class="select-none">Private Dream</div>
</label>
<%= f.button :submit, button_name, class: "mt-4" %>
<% end %>
